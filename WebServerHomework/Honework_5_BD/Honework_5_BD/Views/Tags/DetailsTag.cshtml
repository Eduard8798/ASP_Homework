@model Honework_5_BD.Models.Tag.TagModel

@{
    ViewData["Title"] = "Tag Details";
}

<h1>Tag Details</h1>

<div>
    <h4>Tag Details</h4>
    <hr />
    <dl class="row">
        <!-- Display Tag Name -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <!-- Display Tag Id (optional) -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
    
    <!-- Links to other actions -->
    <a asp-action="EditTag" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="IndexTag" class="btn btn-secondary">Back to List</a>
</div>