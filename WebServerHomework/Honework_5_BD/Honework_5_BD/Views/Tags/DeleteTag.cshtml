@model Honework_5_BD.Models.Tag.TagModel

@{
    ViewData["Title"] = "Delete Tag";
}

<h1>Delete Tag</h1>

<h3>Are you sure you want to delete this tag?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <form asp-action="DeleteConfirmedTag" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="IndexTag" class="btn btn-secondary">Cancel</a>
    </form>
</div>